<h1> All movies </h1>
<%= link_to 'Add Movie ', new_movie_path, class: 'btn btn-primary' %>
<div id="movies">
  <div class="row">
    <div class="col-8"><%= link_to "Movie Title", movies_path(:sort_by => 'title'), :id => 'title_header', :class => (@sort_by == 'title' ? 'sorted' : '') %></div>
    <div class="col-2">Rating</div>
    <div class="col-2"><%= link_to "Release Date", movies_path(:sort_by => 'release_date'), :id => 'release_date_header', :class => (@sort_by == 'release_date' ? 'sorted' : '') %></div>
  </div>
  <% @movies.each do |movie| %>
    <div class="row">
      <div class="col-8"> <%= link_to movie.title, movie_path(movie) %> </div>
      <div class="col-2"> <%= movie.rating %></div>
      <div class="col-2"> <%= movie.release_date.strftime('%F') %> </div>
    </div>
  <% end %>
</div>